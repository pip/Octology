#!/usr/bin/perl
# H99MFsec:w8 crE8d by PipStuart <Pip@CPAN.Org> to just 'wait' (i.e., sleep) for a parameter dur8ion length, initially with frame (60th-of-second) precision;
# 2du:XtNd d8:fldz to enable jinx && float framez somehow (maybe just as extra w8 method parameter),XtNd help text with auth && more explained examples,
#   compil8ion && interpret8ion overhead seems rather significant so try to HiRes time typical full script startup && empty execution to fine-tune usleep
#     parameter for better accuracy but parameterize adjustment from here so that w8 called within longer running code won't then be always too fast either,
#   consider maybe adding a whole tangential interface of probably more b8-rel8d standard measurement conversions from the 'weight' altern8 spelling angle;
use strict;use warnings;use utf8;use v5.10;use Octology::d8::dur8;my $d8VS='H99MFsec';my $durs;my $dur8;
if(@ARGV){if($ARGV[0]=~ /^--?h/i){ # only detect single possible -help option so far
    open my $out8,'>&',STDOUT or die "Can't open  duplic8 STDOUT handle: $!";binmode $out8,':encoding(UTF-8)'; # crE8 local duplic8 of global
    print   $out8 " w8 to wait for a dur8ion; d8VS:$d8VS\n -h display this Help text and exit\n    try passing a dur8 like '3U' for 3.5 seconds;";
    close   $out8             or die "Can't close duplic8 STDOUT handle: $!";exit();}
  else{     $durs= shift(@ARGV);}}
elsif (!-t STDIN){ chomp($durs=join('', <STDIN>));} # accept piping dur8 param through instead of as argument
$durs='0' unless(defined($durs) && length($durs));
$dur8=Octology::d8::dur8->new($durs);$dur8->w8() if($durs=~ /[1-9A-Za-z._]/);
