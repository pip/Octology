#!/usr/bin/perl
# HAQM1wxx:oupd crE8d by PipStuart <Pip@CPAN.Org> to check differences between all my working development files && my local t8 Octology git repo directory;
# 2du:see if Path::Tiny (or some betr module) can easily recurse subdirs,mv2 a8.pm,reformat && colr diff 4 out8,maybe add famd or filesys mod pre-checks;
use strict;use warnings;use utf8;use v5.10;#se Octology::a8;#upd(@ARGV);
my  $VERSION='0.0';my $d8VS='HB6L8jGf';my $lcld='/dvl/t8/Octl/Octology';
my   $logd=$ENV{'HOME'} . $lcld    ;chdir($logd); # Local     Octology Git Directory
my   @codf= <"$logd/.*"             > ;           # Current   Octology     Directory Files (only want 8 dot-files from root of repo, rest shud be normal files)
push(@codf, <"$logd/*"              >);
push(@codf, <"$logd/*/*"            >);
push(@codf, <"$logd/*/*/*"          >);
push(@codf, <"$logd/*/*/*/*"        >);
push(@codf, <"$logd/*/*/*/*/*"      >);
push(@codf, <"$logd/*/*/*/*/*/*"    >);
push(@codf, <"$logd/*/*/*/*/*/*/*"  >);
push(@codf, <"$logd/*/*/*/*/*/*/*/*">);
for (@codf){ unless(-d "$_" || /\/(\.(\.|git)?|LICENSE|README.md)$/){my $lclf=$_;$lclf=~ s/$lcld//;my $fdif=`diff $lclf $_`;
    if(defined($fdif) && length($fdif)){say "cp -a $lclf\n      $_\n$fdif";system("cp -a $lclf $_");}}}
