#   Dtect -h with nO folOing Host srvr or --help 2prnt some Help txt from here B4 passing latter on2`dict`,accept&&highlight&&loop multiple word pRameterz,
#   fix2hndl quotd spAcd pRamz2pass thru like `dict 'et cetera'`,Dtect&&auto-apNd comNtz4faild queriez,mk mode2fillin all old faild queriez&&mAB agreg8 thM2,
#   demarc8 which 8-words are not yet in 8.txt top list (maybe with uc && spelling remaps like 'ci8'=>'C8','pi8'=>'P8','i8'=>'E8','u8'=>'U8', etc.),
#   (if possible) it would be nice to eventually figure out how to enable zsh Tab-completion for dict to also work the same for both dic && just d alias too;
#  `d card` has WordNet && FOLDoC,Jargon,VERA with 8 dFinitNz && '[Obs.]' before Webster in GCIDE
#  `d flip` has FOLDoC
#  `d cube` has Jargon    # Example backticks here assume .zshrc, .bashrc, or some shell sets "alias d='dic';" for extra brief definition display && also that
#  `d dice` has V.E.R.A.  #   each major dict d8a-base is installed via dict-(wn|foldoc|jargon|gcide|vera|devil|bouvier|gazetteer2k|elements|moby-thesaurus);
#  `d hope` has Devil's   # Not sure if dict-((free|x)dict|stardic) are useful to me yet for probably language transl8ion for Free && residual-config other 2?
#  `d rent` has Bouvier
#  `d gate` has gaz2k-places with lotz of sub-fieldz which could be colrd && Yearz2alIn
#  `d four` has last entry: "a playing card or domino or die whose upward face shows four pips" which are each key partz of Octology && ~/.Hrc =)
# H9NMN12d:upd8d /etc/dictd/dictd.order to add other installed dicts and place Moby last (but then have2 `dictdconfig -w` && `/etc/init.d/dictd restart`) with:
#web1913 gcide wn foldoc jargon vera devil elements easton hitchcock bouvier gazetteer gaz2k-zips gaz2k-places gaz2k-counties moby-thesaurus
# HC2LNewD:fixd `d BLT` to properly Decode UTF-8 double-quotes from dict && noted also qw(server reverse reserve severer)=~ s/e//g; # srvr rvrs rsrv svrr;
# Currently, the only special pRameter that `dic` swallows 4 itself is lone '-w' which design8s any dFinitions should be formatted as *NOT* default Wide mode.
use strict;use warnings;use utf8;use v5.10;use Encode;my $VERSION='0.0';my $d8VS='HC9LHUNT'; # orig from TeST Substitute Input,now XtNded d8 util,l8r c8 IF?
use Octology::a8;my $word='';my $wclr=S('Wr');my $logd="$ENV{'HOME'}/.log";my %dlog; # setup global word colr SKp && LogDirectory && DicLog hash
use Octology::d8;my $Stxt   ;my $eclr=S('Yf');my $widf=1  ; # BlO hopefully strips -w param 2flag disabling dflt wide-mode or load $word 4l8r colr8ion if!flag
my $cw=160;$cw=$ENV{'COLUMNS'} if(exists($ENV{'COLUMNS'})); # try to setup potentially wider ColumnWidth for when attempting to join shorter linez
mkdir ( $logd,0750) unless(-d "$logd");my $dlfn= $logd . '/dic.log'; # attempt to crE8 non-XistNt log-directory in User's ~ && setup DicLogFileName
open my $out8,'>&',STDOUT or die "Can't open  duplic8 STDOUT handle: $!";                            binmode $out8,':encoding(UTF-8)'; # crE8 local duplic8
unless(    -e $dlfn){ # initialize dic log "history" file if none existz
  open     my $dlfh,'>' ,$dlfn or die "!*EROR*! Couldn't open  dic log file:$dlfn for writing! $!\n";binmode $dlfh,':encoding(UTF-8)';
  my     $nwd8=Octology::d8->new();print $dlfh "# $nwd8:~/.log/dic.log gener8d by Octology's `dic` command with VERSION:$VERSION d8VS:$d8VS; ";
                                   say   $dlfh "You may append comments (preceded with '#') && they will persist;";
  close       $dlfh            or die "!*EROR*! Couldn't close dic log file:$dlfn! $!\n";}
if    (    -e $dlfn){my $argz= join(' ',@ARGV); # load dic.log so that duplic8z can be discarded
  open     my $dlfh,'<' ,$dlfn or die "!*EROR*! Couldn't open  dic log file:$dlfn for reading! $!\n";binmode $dlfh,':encoding(UTF-8)';
  while     (<$dlfh>){if(/^\s*[0-9A-Z._]{8}:(.+)$/i){my $hwrd=$1;$hwrd=~ s/\s*#.*//;$dlog{lc($hwrd)}=1;}} # strip l8r added trailing dic log "history" commentz
  close       $dlfh            or die "!*EROR*! Couldn't close dic log file:$dlfn! $!\n";
  unless(!length($argz) || exists($dlog{lc($argz)})){
    open   my $dlfh,'>>',$dlfn or die "!*EROR*! Couldn't open  dic log file:$dlfn for writing! $!\n";binmode $dlfh,':encoding(UTF-8)';
    my   $nwd8=Octology::d8->new();say $dlfh "$nwd8:$argz";
    close     $dlfh            or die "!*EROR*! Couldn't close dic log file:$dlfn! $!\n";}}
if(@ARGV){for(my $andx=$#ARGV;$andx>=0;$andx--){if($ARGV[$andx]=~ /^-?-?w$/){$widf=0;splice(@ARGV,$andx,1);}else{$word=$ARGV[$andx];}}}
if(@ARGV)       {$Stxt=decode('UTF-8',`dict @ARGV`);} # orig had b64 countz&&color8ion but b10 is better for now&&had buggy c8 cmds, so changing back
elsif(!-t STDIN){$Stxt= join('',           <STDIN>);  # enable piping through like colorit if STDIN is not a TTY
  if ($Stxt=~  /\nFrom [^\n]*\n\n  (\w+)/){$word=$1;  # try to detect first defined parameter word for highlighting
    unless(exists($dlog{lc($word)})){
      open my $dlfh,'>>',$dlfn or die "!*EROR*! Couldn't open  dic log file:$dlfn for writing! $!\n";binmode $dlfh,':encoding(UTF-8)';
      my $nwd8=Octology::d8->new();say $dlfh "$nwd8:$word";
      close   $dlfh            or die "!*EROR*! Couldn't close dic log file:$dlfn! $!\n";}}}
exit unless(length($Stxt)); # probably "No definitions found..." already output on STDERR so just exit having nothing to color
      $Stxt=~ s/\s*(\[1913 Webster\])/ $1/g; # these need to strip leading spaces in order to attempt desired right alignment next
      $Stxt=~ s/\s*(\[PJC\])/ $1/g;
my @St=split(/\n/,$Stxt);$Stxt='';
for(0..$#St-1){my $bp; # BlockPad
if(0){ # alignment attempt introducez trailing newlinez && sometimez skipz over unexpectedly, just not behaving as intended so disable for now
  if    ($St[$_  ]=~  /^(.*)(\[(1913 Webster)\].*)$/                ){$bp=' 'x ($cw - length("$1$2")); # maybe should space align all regexez using /x
         $St[$_  ]= "$1$bp$2";}
  elsif ($St[$_  ]=~  /^(.*)(\[cant\] \[PJC\].*)$/                  ){$bp=' 'x ($cw - length("$1$2")); # need sepR8 tSt4 rFz th@ canB 2gether already
         $St[$_  ]= "$1$bp$2";}
  elsif ($St[$_  ]!~  /\[cant\]/ && $St[$_  ]=~  /^(.*)(\[PJC\].*)$/){$bp=' 'x ($cw - length("$1$2")); # try Xclusively cant vs. PJC?
         $St[$_  ]= "$1$bp$2";}
}
  if($widf){ # this wide-mode line concaten8ion is extremely basic && may ruin some l8r color8ion && alignment of some numbered lists && such
    if    ($St[$_  ]=~  /^( {4,})/         ){my $il=length($1); # IndentLength
      if  ($St[$_+1]=~  /^ {$il}/ &&  length("$St[$_]$St[$_+1]") < $cw){
           $St[$_+1]=~ s/^ +/  / ;$St[$_].=$St[$_+1];$St[$_+1]='';}}

# sinc `d Caliphate` shOwd mor than just2lInz shud proly B joind smtImz,tryd 2 add 3rd BlO && workd just for that but ruind `d four`&&proly othrz so cmntd4now
#   if    ($St[$_  ]=~  /^  +/             ){
#     if  ($St[$_+1]=~  /^  +/ &&  length("$St[$_]$St[$_+1]") < $cw){
#          $St[$_+1]=~ s/^  +/  /;$St[$_].=$St[$_+1];$St[$_+1]=''; # sinc `d Caliphate` shOwd mor than just2lInz shud proly B joind smtImz,tryd 2 add 3rd BlO
#       if(    $_    <  ($#St-1)){#  && # avoid uninit warning at end
##f(        $St[$_+2]=~  /^  ( +)/ &&  length("$St[$_]$St[$_+2]") - length($1) < $cw){ # try 2 not Xpect IndentLength spAcez on 3rd lIn but at lEst 2?
#if(        $St[$_+2]=~  /^  ( +)/){
##rint "$W d_:$_ $M 02:",length("$St[$_]$St[$_+2]")," $Y d1:",length($1)," $C cw:",$cw,"\n";
##rint "$W '",                  "$St[$_]$St[$_+2]'\n";
# if(length("$St[$_]$St[$_+2]") - length($1) < $cw){ # try 2 not Xpect IndentLength spAcez on 3rd lIn but at lEst 2?
##rint "$R GotHere!\n";
#          $St[$_+2]=~ s/^  +/  /;$St[$_].=$St[$_+2];$St[$_+2]='';}}} # mAB nEd 4th or thEs shud just B loopz until leng wud surpass $cw nstd?
# }
#}

    if    ($St[$_  ]=~  /^(  \S| {7}\d+\.)/){my $il=length($1); # IndentLength  # sepR8 smarter indent tests for Bouvier where normal blocks seem to have just
      if  ($St[$_+1]=~  /^  / &&  $St[$_+1]!~  /^ {7}\d+\./ && length("$St[$_]$St[$_+1]") < $cw){ # 2-spc indNt but furthr NtrEz have 7-spc indNt then \d+\.
           $St[$_+1]=~ s/^  +/  /;$St[$_].=$St[$_+1];$St[$_+1]='';}}}
      $Stxt.="$St[$_]\n";}# if(length($St[$_])); # decent attempt to join consecutive linez with the same indent level (but \d[.:]|(\w) should DpN)
      $Stxt.="$St[-1]\n"; # finish rebuilding last line

#     $Stxt=~ s/([^:]\n) *\n/$1/g; # try 2 strip blank lInz left from 3-lIn join atMptz 4 Caliphate wich brOk othrz so cmntd4now

      # if non-STDERR results
      $Stxt=~ s/(;)/$C$1$G/g; # this ruined SKpz when done l8r
      $Stxt=~ s/(Collaborative)( International)( Dictionary)( of)( English)/$C$1$M$2$W$3$c$4$Y$5/g; # doing this early so *ative can do 8-word colr BlO
  if(length($word)){
      $Stxt=~ s/($word +)(imp|vb|v|t|i|n|p|pr|cf|fr|a|adv)( +)(1: +)/$1$R$2$3$C$4/gi; # try 2 catch pRt-of-sPch && 1st dFinition num aftr WN word (&& ignrcAs2)
      $Stxt=~ s/($word)/$wclr$1$z$G/gi;} # colr looked-up word (if Dtectd) && BlO colr tail of most comon 8-words 4 distinction (some m@chd pronunC8s wil difr)
      $Stxt=~ s/(\w)((reat|ated?|atron|(ait|[ae]ight|at\B))(en|est|ant|or|ure|ize?)?(ed|i(ng|ve|ons?a?l?y?|ous))?(istic|ment|ly|s)?)(\W|$)/$1$eclr$2$z$G$9/gi;
if(   $Stxt=~  /^(\d+) definition(s)? found/       ){my $dFct=$1;my $dFst=' dFinitN';$dFst.='z' if(defined($2)); # tried2add non-word Boundary aftr at
      $Stxt=~ s/^\d+ definitions?( found)/$C$dFct$Y$dFst$M$1$G/;}
if(   $Stxt=~  /(\n +?)(\d+) Moby Thesaurus words/ ){my $MTct=$2;my $MTin=$1;chop($MTin) if(length($2) > 2);
# if(length($1) > length(b64($1))){$MTct=' 'x (length($1) - length(b64($1))) . $MTct;} # just realign Moby since count indentz unlike /^/ top dF count
      $Stxt=~ s/(\n +?)(\d+)( Moby Thesaurus words)/$MTin$B$MTct$G$3/;}
      $Stxt=~ s/(\]:)\n/$1/g;
      $Stxt=~ s/\s+$//;
      $Stxt=~ s/( v)(.)(\d+)(.)(\d+)/$P$1$W$2$B$3$W$4$R$5/g;
      $Stxt=~ s/(\[)(g)(c)(i)(d)(e)(\])/$B$1$O$2$C$3$M$4$W$5$Y$6$B$7$G/g;        # broke  CIDE  apart like above
      $Stxt=~ s/(Word)(Net )(\()(r)(\))( 3)(.)(0)/$O$1$M$2$w$3$Y$4$w$5$B$6$W$7$M$8/;
      $Stxt=~ s/ (\()(2006)(\))/ $c$1$R$2$c$3/;
      $Stxt=~ s/(\[)(w)(n)(\])/$B$1$O$2$M$3$B$4$G/;
      $Stxt=~ s/(Free)( On)(-)(line)( Dictionary)( of)( Computing)/$Y$1$B$2$C$3$M$4$W$5$w$6$O$7/g;
      $Stxt=~ s/ (\()(\d+)( January| March)( 20\d+)(\))/ $c$1$Y$2$O$3$R$4$c$5/g; # might want to just join all reasonable Month names here l8r
      $Stxt=~ s/(\[)(f)(o)(l)(d)(o)(c)(\])/$B$1$Y$2$B$3$M$4$W$5$w$6$O$7$B$8$G/g; # broke FOLDoC apart like above
      $Stxt=~ s/(Jargon)( File )(\()(version)( \d+)(\.)(\d+)(\.)(\d+)/$C$1$R$2$G$3$P$4$B$5$W$6$M$7$W$8$R$9/g;
      $Stxt=~ s/,( \d+)( \w+)( 20\d+)(\) )(\[)(jargon)(\])/,$Y$1$O$2$R$3$G$4$B$5$C$6$B$7/g;
      $Stxt=~ s/(V\.)(E\.)(R\.)(A\.)/$M$1$Y$2$R$3$C$4/g;
      $Stxt=~ s/(Virtual)( Entity)( of)( Relevant)( Acronyms )(\()(\w+)( 20\d+)(\))/$M$1$Y$2$c$3$R$4$C$5$G$6$O$7$R$8$G$9/g;
      $Stxt=~ s/(\[)(v)(e)(r)(a)(\])/$B$1$M$2$Y$3$R$4$C$5$B$6$G/g;
      $Stxt=~ s/(The)( Devil')(s)( Dictionary )(\()(\d+)(-)(\d+)(\))/$z$1$R$2$R$3$W$4$M$5$R$6$Y$7$R$8$M$9/g;
      $Stxt=~ s/(\[)(devil)(\])/$B$1$R$2$B$3$G/;
      $Stxt=~ s/(\[)(moby)(-)(thesaurus)(\])/$B$1$M$2$Y$3$R$4$B$5$G/;
      $Stxt=~ s/(Moby)( Thesaurus)/$M$1$R$2$G/g;
      $Stxt=~ s/( II)( by)( Grady)( Ward,)( 1)(.)(0)/$C$1$w$2$O$3$C$4$B$5$W$6$M$7/;
      $Stxt=~ s/(Bouvier')(s)( Law)( Dictionary,)( Revised)( 6th)( Ed)/$O$1$O$2$C$3$W$4$R$5$M$6$Y$7/g;
      $Stxt=~ s/ (\()(1856)(\) )(\[)(bouvier)(\])/ $G$1$R$2$G$3$B$4$O$5$B$6$G/g;
      $Stxt=~ s/(U\.)(S\.)( Gazetteer)( Places)/$Y$1$B$2$C$3$M$4/g;
      $Stxt=~ s/ (\()(20\d+)(\) )(\[)(gaz)(2k)(-)(places)(\])/ $G$1$R$2$G$3$B$4$C$5$R$6$O$7$M$8$B$9$G/g;
      $Stxt=~ s/ (\()((19|20)\d\d)(\))/ $c$1$R$2$c$4$G/g;                                           #     try to get mainly all Gazetteer paren Yearz
      $Stxt=~ s/ (\()(\w+ +)((19|20)\d\d)(\))/ $c$1$O$2$R$3$c$5$G/g;                                # thN try to get (Month Year) of   some FOLDoC
      $Stxt=~ s/ (\()((19|20)\d\d)(-)([01]?\d)(-)([0123]?\d)(\))/ $c$1$R$2$C$4$O$5$C$6$Y$7$c$8$G/g; # thN try to get (Year-Mo-Da) of end of FOLDoC
      $Stxt=~ s/(\[)(Webster )(1913 )(Suppl\.)(\])(\n|$)/$Y$1$B$2$R$3$M$4$Y$5$G/g; # from `d manic `
      $Stxt=~ s/(\[)(1913)( Webster \+)(PJC)(\])(\n|$)/$Y$1$R$2$B$3$C$4$Y$5$G/g;   # from `d epigee`
      $Stxt=~ s/(\[)(1913)( Webster)(\])(\n|$)/$Y$1$R$2$B$3$Y$4$G/g;
      $Stxt=~ s/(\[)(PJC)(\])(\n|$)/$Y$1$C$2$Y$3$G/g;
      $Stxt=~ s/(\[)(cant)(\] ?)/$Y$1$M$2$Y$3$G/g; # so far only seen preceding PJC so not testing \n|$ yet
      $Stxt=~ s/\s*\n(From (The)?)/\n$K$1/g;
      $Stxt=~ s/(\W)(syn:)/$1$M$2/gi;
      $Stxt=~ s/(\W)(ant:)/$1$Y$2/gi;
      $Stxt=~ s/(\W)(imp|vb|v|t|i|n|p|pr|cf|fr|a|adv)(\.)/$1$R$2$3/g;  # try 2 keep watch 4 any othrz that shO up uncolrd 2 add here l8r too
      $Stxt=~ s/(\n +?)(n|v|adj|adv) +(\d+[\.:] )/$1$R$2 $C$3/g; # shud upd8 2 accept all pRtz of sPch B4 NdX && mAB shft bak so digz alIn
      $Stxt=~ s/(\n +?|\S  )(\d+[\.:] )/$1$C$2/g; # try 2 altern8ly accept already joined new NdXz wich shud folO just 2 spAcz aftr prEv tXt
      $Stxt=~ s/(\n +?)(\()([a-z])(\) )/$1$P$2$Y$3$P$4$G/g;
      $Stxt=~ s/(\D[^m\e])([\[\]])/$1$O$2$G/g; # colr all remaining [] which aren't already prECded by SKpz from above && aren't part of SKpz either
      $Stxt=~ s/(\D[^m])([\(\)])/$1$B$2$G/g;   # `d soar` has 1993] so failz the non-Digit char
      $Stxt=~ s/( km)([\)])/$1$B$2$G/g;        # `d gate` gaz2k shows /km\)$/ matching SKp code end so no colr, may need to parse apart 2B thorough
      $Stxt=~ s/([\{\}])/$M$1$G/g;
      $Stxt=~ s/([<>])/$Y$1$G/g;
      $Stxt=~ s/\n *\n/\n/g;
      $Stxt=~ s/([^-\n ])(-)([^-\n \e])/$1$W$2$G$3/g; # try to catch typical mid-word hyphens for sepR8 distinction
      $Stxt=~ s/(--)/$O$1$G/g;
      $Stxt=~ s/(\\)/$O$1$G/g; # this ruined SKpz?
      $Stxt=~ s/(\.)/$W$1$G/g;
      $Stxt=~ s/(\^)/$B$1$G/g;
      $Stxt=~ s/(\@)/$B$1$G/g;
      $Stxt=~ s/(\*)/$C$1$G/g;
      $Stxt=~ s/(\+)/$M$1$G/g;
      $Stxt=~ s/(\?)/$W$1$G/g;
      $Stxt=~ s/(`)/$O$1$G/g;
      $Stxt=~ s/(,)/$Y$1$G/g;
      $Stxt=~ s/(:)/$W$1$G/g;
      $Stxt=~ s/(=)/$M$1$G/g;
      $Stxt=~ s/(")/$Y$1$G/g;
      $Stxt=~ s/(')/$W$1$G/g;
      $Stxt=~ s/(&)/$C$1$G/g;print $out8 $Stxt;
close   $out8             or die "Can't close duplic8 STDOUT handle: $!";
